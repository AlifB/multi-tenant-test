<%- include('partials/header', { title: "Register", stylePaths: ['/public/css/register.css'] }) %>

<main class="uk-flex uk-flex-center uk-flex-middle uk-margin-auto-vertical">
    <div class="uk-card uk-card-body uk-card-default">
      <div class="uk-card-title">
        <h1>Register</h1>
      </div>
      <form class="uk-form uk-form-stacked" action="/register" method="POST">
        <div class="uk-margin">
          <label class="uk-form-label" for="tenant">Tenant: <span class="required-star">*</span></label>
          <div class="uk-form-controls">
            <select class="uk-select" name="tenant" id="tenant">
              <% tenants.reverse().forEach(tenant => { %>
              <option value="<%= tenant %>"><%= tenant %></option>
              <% }); %>
            </select>
          </div>
        </div>
        <div class="uk-margin">
          <label class="uk-form-label" for="name">Username: <span class="required-star">*</span></label>
          <div class="uk-form-controls">
            <input class="uk-input" type="text" id="name" name="name" required />
          </div>
        </div>
        <div class="uk-margin">
          <label class="uk-form-label" for="email">Email: <span class="required-star">*</span></label>
          <div class="uk-form-controls">
            <input class="uk-input" type="email" id="email" name="email" required />
          </div>
        </div>
        <div class="uk-margin">
          <label class="uk-form-label" for="password">Password: <span class="required-star">*</span></label>
          <div class="uk-form-controls">
            <input
              class="uk-input"
              type="password"
              id="password"
              name="password"
              required
            />
          </div>
        </div>
        <div class="uk-margin">
          <div class="uk-form-controls">
            <button class="uk-button uk-button-primary" type="submit">
              Register
            </button>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="<%- csrfToken %>">
      </form>
      <a href="/login">Login</a>
    </div>
</main>

<%- include('partials/footer') %>
